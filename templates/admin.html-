{% extends 'base.html' %}

{% block content %}
{{ super() }}
{% for cat, msg in get_flashed_messages(True) %}
    <div class="flash {{cat}}">{{msg}}</div>
{% endfor %}
<div class="proj container">
    <div class="pram"> 
    {% for post in menu %} 
        <form action="{{url_for('updateStatus')}}" method="post" class="form-contact">
            <div class="card mb-5">
                <div class="card-body">
                    <label class="d-flex flex-column">Заголовок<input class="form-control" type="text" value="{{ post['title'] }}" name="title"> <br></label>
                    <label class="d-flex flex-column">Контент<textarea class="form-control" value="{{ post['content'] }}" name="content" rows="8" cols="55"> {{ post['content'] }}</textarea> <br></label>
                    <label class="d-flex gap-3 align-items-center">Опубликовано<input class="ml-3 form-control w-auto h-auto" type="checkbox" value="public" name="status"></label>
                    <label class="d-flex gap-3 align-items-center">Черновик<input class="ml-3 form-control w-auto h-auto" type="checkbox" value="draft" name="status"></label>
                    <input class="form-control" type="hidden" name="id" value="{{ post['id'] }}">
                    <p><button class="form-control color-primary btn btn-primary" type="submit">Изменить</button>
                </div>
            </div>
        </form>
    {% endfor %}
    </div>
</div>
{% endblock %}